<p id="notice"><%= notice %></p>

<h1>Skriv din bok - en bit i taget</h1>

<table>
  <thead>
    <tr>
      <th>Dina stycken:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td><%= link_to 'Visa', idea %></td>
        <td><%= link_to 'Ändra', edit_idea_path(idea) %></td>
        <td><%= link_to 'Kasta', idea, method: :delete, data: { confirm: 'Är du säker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nytt stycke', new_idea_path %>
